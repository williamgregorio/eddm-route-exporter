{
  "name": "USPS EDDM Route Exporter",
  "description": "Exports EDDM routes data from the USPS website into a CSV file.",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Export USPS EDDM Routes to CSV",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "128": "icons/icon-128.png"
  },
  "permissions": ["activeTab"],
  "host_permissions": ["https://eddm.usps.com/eddm/select-routes.htm*"],
  "content_scripts": [
    {
      "matches": ["https://eddm.usps.com/eddm/select-routes.htm*"],
      "js": ["content_script.bundle.js"],
      "run_at": "document_idle"
    }
  ]
}
